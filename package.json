{
  "name": "@adobe/create-helix-library",
  "version": "2.0.1",
  "description": "Create Helix Library",
  "main": "create-helix-shared.js",
  "type": "module",
  "bin": {
    "create-helix-library": "create-helix-library.js"
  },
  "scripts": {
    "test": " c8 mocha",
    "test-ci": "c8 mocha && codecov",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "mocha": {
    "require": "test/setup-env.js",
    "recursive": "true",
    "reporter": "mocha-multi-reporters",
    "reporter-options": "configFile=.mocha-multi.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-library.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-library/issues"
  },
  "homepage": "https://github.com/adobe/helix-library#readme",
  "dependencies": {
    "chalk-template": "0.3.1",
    "fs-extra": "10.0.0",
    "inquirer": "8.2.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.3.2",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "c8": "7.11.0",
    "codecov": "3.8.3",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.8.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.25.4",
    "husky": "7.0.4",
    "jsdoc-to-markdown": "7.1.1",
    "junit-report-builder": "3.0.0",
    "lint-staged": "12.3.2",
    "mocha": "9.2.0",
    "mocha-multi-reporters": "1.5.1",
    "semantic-release": "19.0.2"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.cjs": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
